<!-- Log in form -->
<div id="login-form">
  <% if @user && @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited this user from logging in:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for :sessions, url: sessions_path do |f| %>
    <div class="row"><br>
      <div class="small-6 columns">
        <h2>Merriweather's Winter Poster Shop</h2>
      </div>
      <div class="small-2 columns">
        <%=f.label :email %><%=f.text_field :email %>
      </div>
      <div class="small-2 columns">
        <%=f.label :password %><%=f.password_field :password %>
      </div>
      <div class="small-2 columns"><br>
        <%= f.submit "Log In", class: 'button tiny radius' %>
      </div>
    </div>
  <% end %>
</div>

